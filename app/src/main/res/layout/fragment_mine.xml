<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <include layout="@layout/view_info_detail_data" />

            <com.xzwzz.lady.widget.LineControlView
                android:id="@+id/zuanshi"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@color/white"
                android:visibility="visible"
                app:canNavition="true"
                app:iconRes="@mipmap/bangding"
                app:title="绑定账号" />

            <com.xzwzz.lady.widget.LineControlView
                android:id="@+id/change"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@color/white"
                android:visibility="visible"
                app:canNavition="true"
                app:iconRes="@mipmap/qiehuanzhanghao"
                app:title="账号切换" />

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#f9f9f9" />

            <com.xzwzz.lady.widget.LineControlView
                android:id="@+id/kaitonghuiyuan"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@color/white"
                app:canNavition="true"
                app:iconRes="@mipmap/kaitonghuiyuan"
                app:title="会员续费" />

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#f9f9f9" />

            <com.xzwzz.lady.widget.LineControlView
                android:id="@+id/avhuiyuan"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@color/white"
                android:visibility="gone"
                app:canNavition="true"
                app:iconRes="@mipmap/avhuiyuan"
                app:title="开通AV区会员" />


            <com.xzwzz.lady.widget.LineControlView
                android:id="@+id/yigoushipin"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@color/white"
                android:visibility="gone"
                app:canNavition="true"
                app:iconRes="@mipmap/yigoushipin"
                app:title="已购视频" />

            <com.xzwzz.lady.widget.LineControlView
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@color/white"
                android:visibility="visible"
                app:canNavition="true"
                app:iconRes="@mipmap/fenxiang"
                app:title="推广分享" />

            <com.xzwzz.lady.widget.LineControlView
                android:id="@+id/shoucang"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@color/white"
                app:canNavition="true"
                app:iconRes="@mipmap/shoucang"
                app:title="收藏记录" />

            <com.xzwzz.lady.widget.LineControlView
                android:id="@+id/xinshou"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@color/white"
                android:visibility="visible"
                app:canNavition="true"
                app:iconRes="@mipmap/xinshou"
                app:title="政策条款" />

            <com.xzwzz.lady.widget.LineControlView
                android:id="@+id/kefu"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@color/white"
                app:canNavition="true"
                app:iconRes="@mipmap/kefu"
                app:title="客服联系方式" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>